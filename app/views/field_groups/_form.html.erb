<%= form_for @field_group, remote: true, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> /Field Group</legend>

    <%= render :partial => "common/form_error", :locals => { model: @field_group } %>

    <div class="control-group">
      <%= f.label :label, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :label, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :position, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :position, :class => 'number_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', field_groups_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
