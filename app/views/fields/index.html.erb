<h1>Fields</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Label</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @fields.each do |field| %>
      <tr>
        <td><%= field.id %></td>
        <td><%= link_to field.label, field_path(field) %></td>
        <td><%= field.created_at %></td>
        <td>
          <%= link_to 'Edit', edit_field_path(field), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', field_path(field), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_field_path, :class => 'btn btn-primary' %>
