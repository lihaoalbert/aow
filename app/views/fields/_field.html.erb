<tr id="<%= dom_id field %>" >
  <td><%= field.label %></td>
  <td><%= field.as %></td>
  <td>
    <%= link_to 'Edit', edit_field_path(field), :class => 'btn btn-mini', remote: true %>
    <%= link_to 'Destroy', field_path(field), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger', remote: true %>
  </td>
</tr>
